{
	"manifest_version": 2,
	"name": "Chromagochi",
	"description": "A little critter for you to take care of",
	"version": "1.0",
	"browser_action": {
		"default_icon": "assets/img/icon19.png"
	},
	"background": {
		"scripts": ["assets/js/background.js"],
		"persistent": false
	},
	"permissions": [
		"alarms",		
		"storage"
	],
	"icons": {
		"16": "assets/img/icon16.png",
		"48": "assets/img/icon48.png",
		"128": "assets/img/icon128.png"
	}
}
